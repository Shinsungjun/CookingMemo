<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="#fff8f2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_cate_1"
                    android:layout_width="297dp"
                    android:layout_height="34dp"
                    android:textColor="#000000"
                    android:text="   채소/과일" />

                <Button
                    android:id="@+id/bt_total_1"
                    android:layout_width="285dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="더보기" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Recyclerview_ingre1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_cate_2"
                    android:layout_width="297dp"
                    android:layout_height="34dp"
                    android:textColor="#000000"
                    android:text="   육류" />

                <Button
                    android:id="@+id/bt_total_2"
                    android:layout_width="285dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:text="더보기" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Recyclerview_ingre2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_cate_3"
                    android:layout_width="297dp"
                    android:layout_height="34dp"
                    android:textColor="#000000"
                    android:text="   해산물" />

                <Button
                    android:id="@+id/bt_total_3"
                    android:layout_width="285dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:text="더보기" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Recyclerview_ingre3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_cate_4"
                    android:layout_width="297dp"
                    android:layout_height="34dp"
                    android:textColor="#000000"
                    android:text="   가공/유제품" />

                <Button
                    android:id="@+id/bt_total_4"
                    android:layout_width="285dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:text="더보기" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Recyclerview_ingre4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>