<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewFolderActivity">

    <EditText
        android:id="@+id/new_folder_name"
        android:layout_width="323dp"
        android:layout_height="68dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="50dp"
        android:background="#007C6969"
        android:backgroundTint="#007E7373"
        android:ems="10"
        android:hint="폴더이름을 입력해주세요."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bt_new_folder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_new_folder"
        android:layout_width="349dp"
        android:layout_height="69dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="478dp"
        android:text="추가하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_folder_name" />
</androidx.constraintlayout.widget.ConstraintLayout>