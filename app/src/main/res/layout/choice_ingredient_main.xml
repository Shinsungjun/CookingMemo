<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/choice_bt_refri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="refri"
        app:layout_constraintBottom_toTopOf="@+id/view_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/choice_bt_item"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/choice_bt_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="item"
        app:layout_constraintBottom_toTopOf="@+id/view_item"
        app:layout_constraintRight_toLeftOf="@id/choice_bt_refri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/choice_bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="55dp"
        android:layout_weight="1"
        android:text="@string/fui_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/choice_bt_add"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/choice_bt_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="55dp"
        android:layout_weight="1"
        android:text="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/choice_bt_cancel" />

    <FrameLayout
        android:id="@+id/view_item"
        android:layout_width="360dp"
        android:layout_height="164dp"
        app:layout_constraintBottom_toTopOf="@+id/grid_result_inmain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choice_bt_item" />

    <GridView
        android:id="@+id/grid_result_inmain"
        android:layout_width="360dp"
        android:layout_height="136dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:columnWidth="50dp"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        app:layout_constraintBottom_toTopOf="@+id/choice_bt_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_item" />

</androidx.constraintlayout.widget.ConstraintLayout>